---


import Image from 'astro/components/Image.astro';
import FooterMenu from '../components/FooterMenu.astro'
interface Props{
    color:string;
    title:string;
    subtitle:string;
    id:string;
    
     
}
const{color, title,subtitle, id }=Astro.props;
const textColor = `text-${color}`;
---

<section class="landing-section bg-black h-screen w-scren text-center overflow-hidden relative"
data-header-color{color}
id={id}>
    <div class="z-30 relative h-full flex flex-col">
        <header>
            <h2 class={`${textColor} pt-40 text-[40px] font-medium`}>{title}</h2>
            <p class={`${textColor} text-sm`}>{subtitle}</p>
        </header>

       
    </div>

   
</section>