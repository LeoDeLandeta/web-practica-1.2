---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import ChangeSection from '../components/ChangeSection.astro'
import ModelThree from '../components/ModelThree.astro'
import ModelS from '../components/ModelS.astro';
import ModelX from '../components/ModelX.astro';
import Powerwall from '../components/Powerwall.astro';
import Accesories from '../components/Accesories.astro'
---

<Layout title="Welcome to Astro.">
	<Header />
	<main class="relative w-full h-screen overflow-auto snap-y snap-mandatory">

		<div class="snap-center">
			<HeroSection />
		</div>
		
		<div class="snap-center">
			<ChangeSection />
		</div>

		<div class="snap-center">
			<ModelThree />
		</div>
		<div class="snap-center">
			<ModelS />
		</div>
		
		<div class="snap-center">
			<ModelX />
		</div>
		<div class="snap-center">
			<Powerwall />
		</div>
		<div class="snap-center">
			<Accesories />
		</div>
	</main>
</Layout>

<style>
	*{
		-ms-overflow-style: none;
		scrollbar-width: none;
		scroll-behavior: smooth;
	}
</style>
